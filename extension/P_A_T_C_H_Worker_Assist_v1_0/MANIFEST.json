{
  "manifest_version": 3,
  "name": "P.A.T.C.H Worker Assist",
  "version": "1.0",
  "description": "Local analysis tool for youth outreach workers.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "P.A.T.C.H Worker Assist"
  },
  "options_page": "src/options.html",
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "js": [
        "src/content.js"
      ],
      "css": [
        "src/content.css"
      ]
    }
  ]
}